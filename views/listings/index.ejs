<% layout('/layouts/boilerplate') -%>

<!-- ✅ Add this CSS -->
<style>
  .slider-wrapper {
    position: relative;
  }

  .slider-scroll {
    overflow-x: auto;
    white-space: nowrap;
    scroll-behavior: smooth;
  }

  .filter-item {
    display: inline-block;
    width: 100px;
    opacity: 0.75;
    transition: opacity 0.3s;
  }

  .filter-item:hover {
    opacity: 1;
  }

  .scroll-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border: none;
    font-size: 1.5rem;
    padding: 0.25rem 0.5rem;
    z-index: 1;
    display: none;
  }

  .scroll-arrow.left {
    left: 0;
  }

  .scroll-arrow.right {
    right: 0;
  }

  /* Show arrows on small screens */
  @media (max-width: 992px) {
    .scroll-arrow {
      display: block;
    }
  }

  .slider-scroll::-webkit-scrollbar {
    display: none;
  }
</style>

<div class="container py-3">
<h1 class="text-center">WanderLust-Stayhere – Stay, Explore & Experience.</h1>


<!-- ✅ Filter Slider Wrapper -->
<div class="slider-wrapper my-3">

  <!-- Left Arrow -->
  <button class="scroll-arrow left" onclick="scrollFilter(-200)">
    <i class="fas fa-chevron-left"></i>
  </button>

  <!-- Scrollable Content -->
  <div id="filterSlider" class="slider-scroll px-5 py-2">
    <div class="filter d-inline-flex align-items-start gap-4">

      <div class="filter-item text-center">
        <i class="fa-solid fa-fire fs-4"></i>
        <p class="mb-0">Trending</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-wrench fs-4"></i>
        <p class="mb-0">Repair</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-broom fs-4"></i>
        <p class="mb-0">Cleaning</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-car fs-4"></i>
        <p class="mb-0">Car Service</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-laptop-code fs-4"></i>
        <p class="mb-0">Tech Support</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-hammer fs-4"></i>
        <p class="mb-0">Carpentry</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-plug fs-4"></i>
        <p class="mb-0">Electrician</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-faucet fs-4"></i>
        <p class="mb-0">Plumber</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-utensils fs-4"></i>
        <p class="mb-0">Cooking</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-book fs-4"></i>
        <p class="mb-0">Tutoring</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-child fs-4"></i>
        <p class="mb-0">Babysitting</p>
      </div>

      <div class="filter-item text-center">
        <i class="fa-solid fa-motorcycle fs-4"></i>
        <p class="mb-0">Bike Service</p>
      </div>

    </div>
  </div>

  <!-- Right Arrow -->
  <button class="scroll-arrow right" onclick="scrollFilter(200)">
    <i class="fas fa-chevron-right"></i>
  </button>
</div>


  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% for (let listing of allListing) { %>
      <div class="col">
        <a href="/listings/<%= listing.id %>" class="listing-links">
          <div class="card h-100">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="Property Image">
            <div class="card-body">
              <p class="card-text">
                <strong><%= listing.title %></strong>
                ₹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>



<!-- ✅ Add this JavaScript -->
<script>
  function scrollFilter(amount) {
    document.getElementById('filterSlider').scrollBy({
      left: amount,
      behavior: 'smooth'
    });
  }
</script>