<% layout('/layouts/boilerplate') -%>


  <div class="container mt-5">
    <div class="col-lg-8 offset-lg-2 edit-container">
      <h3 class="edit-heading text-center">Edit Listing</h3>

      <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="needs-validation" novalidate
        enctype="multipart/form-data">

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="listing[title]" class="form-control" value="<%= listing.title %>" required>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea rows="4" name="listing[description]" class="form-control"
            required><%= listing.description %></textarea>
        </div>

        <div class="mb-3 d-flex justify-content-between align-items-start">

          <div class="me-3" style="flex: 1;">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image]" class="form-control" id="imageInput" accept="image/*">
          </div>

          <div class="renderImage">
            <img id="preview" src="<%= originalUrl %>" alt="Image Preview"/>
          </div>
        </div>

          <div class="mb-3">
            <label for="price" class="form-label">Price (â‚¹)</label>
            <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>" required>
            <div class="invalid-feedback">Price is required</div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" value="<%= listing.location %>" required>
            <div class="invalid-feedback">Location is required</div>
          </div>

          <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>" required>
            <div class="invalid-feedback">Country is required</div>
          </div>

          <button class="btn btn-primary w-100 mt-3" type="submit">Update Listing</button>
      </form>
    </div>
  </div>

  <script>
    //Preview Image when Upload

const imageInput = document.getElementById('imageInput');
const preview = document.getElementById('preview');

document.addEventListener('DOMContentLoaded', function () {
    const imageInput = document.getElementById('imageInput');
    const preview = document.getElementById('preview');

    if (imageInput) {
      imageInput.addEventListener('change', function () {
        const file = this.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            preview.src = e.target.result;
            preview.style.width = '300px';
          };
          reader.readAsDataURL(file);
        }
      });
    } else {
      console.log('imageInput element not found.');
    }
  });
  </script>