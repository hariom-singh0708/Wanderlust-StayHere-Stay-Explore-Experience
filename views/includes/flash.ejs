<% if(success && success.length){ %>
  <div class="alert alert-success alert-dismissible fade show flash-alert col-6 offset-3 animate__animated animate__fadeInDown" role="alert">
    <i class="fa-solid fa-circle-check me-2"></i> <strong><%= success %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="alert alert-danger alert-dismissible fade show flash-alert col-6 offset-3 animate__animated animate__fadeInDown" role="alert">
    <i class="fa-solid fa-circle-exclamation me-2"></i> <strong><%= error %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>


<script>
  // Auto-dismiss all flash alerts after 4 seconds
  document.querySelectorAll('.flash-alert').forEach(alert => {
    setTimeout(() => {
      alert.classList.remove('show'); // Bootstrap hide animation
      alert.classList.add('fade');
      setTimeout(() => alert.remove(), 500); // Remove from DOM after fade
    }, 4000);
  });
</script>
