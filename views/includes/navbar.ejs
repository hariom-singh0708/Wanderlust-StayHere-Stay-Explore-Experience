  <div class="container-fluid px-4 py-2">

    <!-- Brand -->
    <a class="navbar-brand fw-semibold fs-4 text-primary" href="/listings">
      <i class="fa-regular fa-compass me-2"></i>WanderLust
    </a>

    <!-- Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Nav Content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- Left Nav Links -->
      <div class="navbar-nav">
        <a class="nav-link px-3 fw-medium text-dark" href="/listings">
          <i class="fa-solid fa-house me-1"></i>Explore
        </a>
        <a class="nav-link px-3 fw-medium text-dark" href="/listings/new">
          <i class="fa-solid fa-plus me-1"></i>New Listing
