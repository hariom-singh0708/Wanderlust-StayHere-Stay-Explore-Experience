          <a href="/signup" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-user-plus me-1"></i>Sign Up
          </a>
          <a href="/login" class="btn btn-outline-success btn-sm">
            <i class="fa-solid fa-right-to-bracket me-1"></i>Log In
          </a>
        <% } else { %>
          <!-- Optional: User avatar or name -->
          <span class="text-muted small">
            <i class="fa-solid fa-user-circle me-1"></i>Welcome, <%= currentUser.username %>
          </span>
          <a href="/logout" class="btn btn-outline-danger btn-sm">
            <i class="fa-solid fa-right-from-bracket me-1"></i>Log Out
          </a>
